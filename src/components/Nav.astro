---
const links = [
  { label: "Features", href: "#features" },
  { label: "Pricing", href: "#pricing" },
  { label: "FAQ", href: "#faq" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 border-b border-white/5 bg-surface-950/80 backdrop-blur-xl">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center gap-2 text-white font-bold text-xl">
      <svg class="h-7 w-7 text-accent-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" />
      </svg>
      FlowStack
    </a>

    <div class="hidden items-center gap-8 md:flex">
      {links.map((link) => (
        <a href={link.href} class="text-sm text-surface-400 transition-colors hover:text-white">
          {link.label}
        </a>
      ))}
      <a href="#pricing" class="rounded-lg bg-accent-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-accent-500">
        Get Started
      </a>
    </div>

    <button id="mobile-menu-btn" class="text-surface-400 md:hidden" aria-label="Toggle menu">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <div id="mobile-menu" class="hidden border-t border-white/5 px-6 pb-4 md:hidden">
    {links.map((link) => (
      <a href={link.href} class="block py-3 text-sm text-surface-400 transition-colors hover:text-white">
        {link.label}
      </a>
    ))}
    <a href="#pricing" class="mt-2 block rounded-lg bg-accent-600 px-4 py-2 text-center text-sm font-medium text-white transition-colors hover:bg-accent-500">
      Get Started
    </a>
  </div>
</nav>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  btn?.addEventListener("click", () => menu?.classList.toggle("hidden"));
  menu?.querySelectorAll("a").forEach((a) =>
    a.addEventListener("click", () => menu?.classList.add("hidden"))
  );
</script>
